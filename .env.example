
# ============================================
# RestlessResume Configuration
# ============================================
# Copy this file to .env and fill in your values
# For Docker, use the postgres service hostname

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Format: postgresql+psycopg2://user:password@host:port/database

# Local Development (SQLite - deprecated, use PostgreSQL)
# DATABASE_URL=sqlite:///./resumedb.sqlite

# Local Development (PostgreSQL)
# DATABASE_URL=postgresql+psycopg2://resumeuser:password@localhost:5432/restless_resume

# Docker Compose (PostgreSQL)
# DATABASE_URL=postgresql+psycopg2://resumeuser:password@postgres:5432/restless_resume

DATABASE_URL=postgresql+psycopg2://resumeuser:password@localhost:5432/restless_resume

# PostgreSQL Connection Details (used by docker-compose)
DB_USER=resumeuser
DB_PASSWORD=your_secure_password_here
DB_NAME=restless_resume
DB_HOST=postgres
DB_PORT=5432

# ============================================
# OPENAI CONFIGURATION
# ============================================
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Configure max tokens for cost control
# Default: 1500 (can be overridden via API or config)
OPENAI_MAX_TOKENS=1500

# Model to use
OPENAI_MODEL=gpt-4-turbo-preview

# Temperature (0.0-2.0, higher = more creative, lower = more deterministic)
OPENAI_TEMPERATURE=0.7

# ============================================
# GOOGLE OAUTH2 CONFIGURATION
# ============================================
# Get these from Google Cloud Console
# https://console.cloud.google.com/

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth redirect URI (adjust for your domain)
# Local: http://localhost:8000/oauth/auth/google
# Production: https://yourdomain.com/oauth/auth/google
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/oauth/auth/google

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Environment: development, staging, production
ENVIRONMENT=development

# Session secret key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SESSION_SECRET_KEY=generate-random-secret-key-here

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/app.log
ERROR_LOG_FILE_PATH=logs/errors.log

# ============================================
# CHROMADB CONFIGURATION (Vector Search)
# ============================================
# ChromaDB can run in-memory or persistent mode
CHROMADB_PERSIST_DIR=./chroma_data

# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Max upload size in MB
MAX_UPLOAD_SIZE_MB=50

# Allowed file extensions (comma-separated)
ALLOWED_FILE_EXTENSIONS=pdf,docx

# Upload directory
UPLOAD_DIR=./uploads

# ============================================
# DOCKER ENVIRONMENT VARIABLES
# ============================================
# These are only needed if running with Docker

# Docker image tag (for production deployments)
DOCKER_IMAGE_TAG=latest

# Compose project name
COMPOSE_PROJECT_NAME=restless-resume
